<h2 class="update">Update Profile</h2>
<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ol>

<% end %>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class=> 'form-control' %>
  </div>

<div class="form-group">
  <%= f.label :phone %>
  <%= f.number_field :phone, country_code: 61, raise: true, placeholder: "0412345678", :class=> 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :suburb %>
  <%= f.text_field :suburb, placeholder: "Suburb & State", :class=> 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :postcode %>
  <%= f.number_field :postcode, placeholder: "Postcode", :class=> 'form-control' %>
</div>

  <%= f.submit "Update", :class=>"btn btn-primary" %>
<% end %>
