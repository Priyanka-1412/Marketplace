<%= form_for @listing, :html => {:multipart => true } do |f| %>

  <% if @listing.errors.any? %>
    <ol>
      <% @listing.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ol>
  <% end %>

    <div class="form-group">
      <%= f.label :title, :class => "label"%>
      <%= f.text_field :title, :required => true, :class=> 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :category_id, :class => "label" %>
      <%= f.select :category_id, Category.pluck(:name, :id), placeholder:"select from menu", :include_blank => true, :class=> 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :condition %>
      <br>
      <%= f.select :condition, ["New", "Used", "Used - Like new", "Used - Good", "Used - Fair"],:include_blank => true, :required => true, :class=> 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, placeholder: "$", :class=> 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :availability %>
      <br>
      
      <%= f.select :availability, ["Available", "Sold out"], :class=> 'form-control', :class=> 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :phone %>
        <%= f.number_field :phone, country_code: 61, raise: true, placeholder: "+(61)412234344", pattern: "[+]{+}[0-9]{2}[0-9]{9}", :required => true, :class=> 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :suburb %>
      <%= f.text_field :suburb, placeholder: "Suburb & State", :required => true, :class=> 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :postcode %>
      <%= f.number_field :postcode, placeholder: "Postcode", :required => true, :class=> 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :images %>
      <%= f.file_field :images, :multiple => true, :class=> 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <br>
      <%= f.text_field :description,  placeholder: "Any Extra Details", :class=> 'form-control'%>
    </div>

  <%= f.submit "Add Post", :class=> "post"%>
<% end %>
