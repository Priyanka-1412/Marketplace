<%= form_for @listing, :html => {:multipart => true } do |f| %>

  <% if @listing.errors.any? %>
    <ol>
      <% @listing.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ol>
  <% end %>

    <%= f.label :title, :class => "label"%>
    <%= f.text_field :title, :required => true, size: "50" %>

    <%= f.label :category_id, :class => "label" %>
    <%= f.select :category_id, Category.pluck(:name, :id), placeholder:"select from menu", :include_blank => true, size: "50" %>

    <%= f.label :condition %>
    <%= f.select :condition, ["New", "Used", "Used - Like new", "Used - Good", "Used - Fair"],:include_blank => true, :required => true, size: "50"%>

    <%= f.label :price %>
    <%= f.number_field :price, placeholder: "$" %>

    <%= f.label :description %>
    <%= f.text_field :description,  placeholder: "Any Extra Details", height:'42px', width: '300px', size: "50"%>

    <%= f.label :availability %>
    <%= f.select :availability, ["Available", "Sold out"], :class=> 'form-control' %>

    <%= f.label :phone %>
    <%= f.number_field :phone, country_code: 61, raise: true, placeholder: "+(61)412234344", pattern: "[+]{+}[0-9]{2}[0-9]{9}", :required => true, size: "50" %>

    <%= f.label :suburb %>
    <%= f.text_field :suburb, placeholder: "Suburb & State", :required => true, size: "50"%>

    <%= f.label :postcode %>
    <%= f.number_field :postcode, placeholder: "Postcode", :required => true, size: "50"%>

    <%= f.label :images %>
    <%= f.file_field :images, :multiple => true, size: "50" %>

  <%= f.submit %>
<% end %>
