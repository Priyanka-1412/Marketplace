<br><h2>Category</h2>
<div class="category">
  <% @categories.each do |category| %>
    <%= link_to category.name, category%>
  <% end %>
</div>
<br>
<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @category.listings.each do |listing| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <%= link_to cl_image_tag(listing.images[0], :class => "card-img-top cl_image", :width => "100%", :height => "225px"), listing if listing.images.present? %>
            <div class="card-body">
              <div class="title">
                <h5 class="card-title"><%= listing.title %></h5>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= button_to "more details", listing, :class => 'btn btn-sm btn-outline-secondary', :method => 'get' %>
                </div>
                <small class="text-muted"><%= "$ #{listing.price }"%></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
