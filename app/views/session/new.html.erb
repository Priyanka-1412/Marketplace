<h1>Log In</h1>

<% if flash[:error_message] %>
  <h2><%= flash[:error_message] %></h2>
<% end %>

<%= form_tag login_path do %>

<%= label_tag :email%>
<%= email_field_tag :email %>

<%= label_tag :password %>
<%= password_field_tag :password %>

<%= submit_tag "Sign In" %>
<%= "Dont't have an account? " %><%= link_to "Register now", new_user_path %>
<% end %>
