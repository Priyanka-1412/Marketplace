<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/water.css@2/out/water.min.css"> -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <nav class="navbar navbar-dark bg-dark">

        <%= link_to "Browse All", listings_path, :class=>"navbar-brand" %>
        <%= link_to "Category", categories_path, :class=>"navbar-brand" %>

        <% if @current_user.present? %>

        <%= link_to "Users", users_path, :class=>"navbar-brand" if @current_user.admin? %>
      

        <%= link_to "Your Account", user_path(@current_user.id), :class=>"navbar-brand"%>
        <%= link_to "Your Posts", listing_user_path(@current_user.id), :class=>"navbar-brand" %>
        <%= link_to "Create New Post", new_listing_path, :class=>"navbar-brand" %>
        ||
        <%= link_to "Logout, #{@current_user.email}", login_path, :method => 'delete', :class=>"navbar-brand" %>

        <nav class="navbar navbar-light bg-light">
          <form action="/search"  class="form-inline">
            <label>Look for an Item:</label>
            <input class="form-control mr-sm-2" type="text" id="search" placeholder="search" name="q" aria-label="Search" size="30">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit" name="button">Search</button>
          </form>
        </nav >

      <% else %>
        <%= link_to "Register", new_user_path, :class=>"navbar-brand" %>
        <%= link_to "Sign in", login_path, :class=>"navbar-brand" %>
      <% end %>
    </nav>
      <%= yield %>
  </body>
</html>
